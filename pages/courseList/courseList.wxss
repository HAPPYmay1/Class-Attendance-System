.course-list {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.course-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0,0,0,.1);
}

.course-info {
  display: flex;
  flex-direction: column;
  width: 220px;
}

.course-name {
  font-size: 32rpx;
  color: #333;
}

.course-status {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}
.course-time{
  font-size: 28rpx;
  color: #333;
}

.check-in-btn {
  background-color: #0081ff;
  margin-right: 0;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  outline: none;
  border: none;
}

.disabled {
  background-color: #ccc;
  color: #fff;
}