.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  background-color: #f5f5f5;
  font-size: 14px;
}

.header {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.1);
}

.logo {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
  margin-top: 2rpx;
}

.title {
  font-size: 16px;
  color: #333;
  /* font-weight: bold; */
}
.course_show{
  margin-top: 10px;
  display: flex;
  flex-direction: column;
}

/* WXSS代码 */
.course-item {
  /* display: block; */
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  border-bottom: 1rpx solid #e5e5e5;
}

.course-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.course-name {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 6px;
}

.course-time {
  font-size: 12px;
  color: #999999;
  margin-bottom: 4px;
}

.course-class {
  font-size: 12px;
  color: #999999;
}

.course-actions {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.edit-button {
  background-color: #f5f5f5;
  color: #666666;
  border: 1px solid #e5e5e5;
  border-radius: 4px;
  font-size: 12px;
  padding: 6px 12px;
  margin-right: 10px;
}

.delete-button {
  background-color: #f5f5f5;
  color: #666666;
  border: 1px solid #e5e5e5;
  border-radius: 4px;
  font-size: 12px;
  padding: 6px 12px;
  margin-right: 10px;
}

.arrow {
  width: 16px;
  height: 16px;
}
.space{
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: solid 2px rgb(245, 245, 245);
}