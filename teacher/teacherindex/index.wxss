.teacherName {
  display: flex;
  flex-direction: column;
  justify-content: center;
  line-height: 100rpx;
}
.teacherFunction{
  height: 600rpx;
  background-color: white;
  margin-top:2px;
  border: solid 1px rgb(230, 228, 228);
}
.square{
  width: 100%;
  height: 33%;
}
.func{
  display: flex;
  flex-direction: column;
  justify-content: center;
  float: left;
  width: 33%;
  height: 100%;
  border-right: solid 1px black;
  border-bottom: solid 1px black;
  border-radius:5px;
  line-height: 25px;
}
.func image{
  margin: 0 auto;
  width: 40%;
  height: 30%;
}
.func text{
  margin: 0 auto;
  font-size: 15px;
}
