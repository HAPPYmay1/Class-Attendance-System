.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  background-color: #f5f5f5;
  font-size: 14px;
}
.header {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.1);
}
.logo {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
  margin-top: 2rpx;
}
.title {
  font-size: 14px;
  color: #333;
  /* font-weight: bold; */
}
.course-item {
  /* display: block; */
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  border-bottom: 1rpx solid #e5e5e5;
}
.course-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.course-name {
  font-size: 16px;
  margin-bottom: 6px;
}